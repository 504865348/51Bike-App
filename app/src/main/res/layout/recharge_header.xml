<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <TextView
        style="@style/blackTextStyle"
        android:text="充值金额"/>
    <TextView
        style="@style/BColorTextStyle"
        android:drawableLeft="@drawable/money"
        android:drawablePadding="10dp"
        android:textSize="18sp"
        android:text="199"/>
    <TextView
        style="@style/grayTextStyle"
            android:text="@string/reback_money"/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        >

        <RadioButton
            android:id="@+id/pay_zhifubao"
            style="@style/payRadioButton"
            android:checked="true"
            android:drawableLeft="@drawable/zhifubao"
            android:drawableRight="@drawable/radio_red_circular"
            android:text="支付宝支付"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/pay_weixin"
            style="@style/payRadioButton"
            android:drawableLeft="@drawable/weixin"
            android:drawableRight="@drawable/radio_red_circular"
            android:text="微信支付" />
    </RadioGroup>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/to_charge"
            style="@style/buttonSmallStyle"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/reChange"/>

    </RelativeLayout>

</LinearLayout>
