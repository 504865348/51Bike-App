<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/route_mes_bg"
        android:layout_alignParentStart="true">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox"
            android:checked="false"
            android:clickable="false"
            android:background="@drawable/white_up_down"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:button="@null"
           />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/whiteTextStyle"
                    android:text="行程消费"
                    android:id="@+id/textView" />

                <TextView
                    android:id="@+id/route_item_spend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥1.0"
                    android:textColor="@color/baseColor"
                    android:textSize="30sp" />

            </LinearLayout>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_centerInParent="true"
            android:src="@drawable/route_mes_bike"
            />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginRight="10dp"

                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/whiteTextStyle"
                    android:id="@+id/route_item"
                    android:text="车辆车牌号"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/whiteTextStyle"
                    android:id="@+id/route_item_carId"
                    android:text="66666"/>


            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/route_mes_bg1"
        android:id="@+id/view2" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/whiteTextNoPaddingStyle"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:id="@+id/route_item_useTime"
                android:gravity="start"
                android:text="时长费（21.2min）"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:id="@+id/route_item_totalMoney"
                android:layout_marginTop="10dp"
                style="@style/whiteTextNoPaddingStyle"
                android:layout_alignParentRight="true"
                android:text="1.0元"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                style="@style/BColorTextStyle"
                android:text="使用抵扣券2.0元"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textView10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                style="@style/BColorTextStyle"
                android:text="-1.0元"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:drawableRight="@drawable/next_white"
            android:drawablePadding="10dp"
            android:id="@+id/see_ChargingRule"
            android:text="查看计费规则"/>
    </LinearLayout>
</LinearLayout>
