    <uses-permission android:name="android.permission.CHANGE_CONFIGURATION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="fea9f64bbf6cb9f5722958110376f3d0" />

        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.view.RideRouteDetailActivity"/>
        <activity android:name=".activity.view.BikeMessage"/>
        <activity android:name=".activity.view.BikeControl"/>
        <activity android:name=".activity.view.Recharge"/>
        <activity android:name=".activity.view.Pay"/>
        <activity android:name=".activity.view.Login"  />
        <activity android:name=".activity.view.register"/>
        <activity android:name=".activity.view.UserInfor"/>
        <activity android:name=".activity.view.Config"/>
        <activity android:name=".activity.view.registerOrLogin"/>
        <activity android:name=".activity.view.renzheng"/>
        <activity android:name=".activity.view.ScanActivity"/>
        <activity android:name=".activity.view.BlueTooth"/>

        <activity android:name=".activity.view.WelCome" android:theme="@style/StartAppTheme"/>
        <!--支付宝-->
        <activity
            android:name="com.alipay.sdk.app.H5PayActivity"
            android:configChanges="orientation|keyboardHidden|navigation"
            android:exported="false"
            android:screenOrientation="behind">
        </activity>
        <activity
            android:name="com.alipay.sdk.auth.AuthActivity"
            android:configChanges="orientation|keyboardHidden|navigation"
            android:exported="false"
            android:screenOrientation="behind">
        </activity>
    </application>


</manifest>